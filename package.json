{
  "name": "system-monitor-cli",
  "version": "1.0.0",
  "description": "Advanced CLI-based system monitoring tool with alerts, logging, and data persistence",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "monitor": "node index.js",
    "alerts": "node index.js --alerts",
    "history": "node index.js --history",
    "config": "node index.js --config",
    "clear": "node index.js --clear",
    "install-global": "npm install -g ."
  },
  "keywords": [
    "system-monitor",
    "cli",
    "performance",
    "monitoring",
    "alerts",
    "logging",
    "nodejs",
    "cpu",
    "memory",
    "disk",
    "network"
  ],
