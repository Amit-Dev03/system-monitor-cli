  "dependencies": {
    "chalk": "^5.5.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Amit-Dev03/system-monitor-cli"
  },
  "bugs": {
    "url": "https://github.com/Amit-Dev03/system-monitor-cli/issues"
